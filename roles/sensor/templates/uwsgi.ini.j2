[uwsgi]
master = true
processes = 1
# instance module name (flask default: app)
callable = app

socket = {{ UWSGI.OPT.DEST }}/uwsgi.sock
chmod-socket = 666

# chdirしないとModuleNotFoundError
# (カレントディレクトリのファイルを読み込めない)
chdir = {{ SENSOR.APP.DEST }}
# main file
wsgi-file = {{ SENSOR.APP.DEST }}/app.py

pidfile = /run/uwsgi.pid
logto = {{ UWSGI.LOG.DEST }}/uwsgi.log

max-requests = 1000
vacuum = true
